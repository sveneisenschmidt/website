{{- $cutoff := time "2026-01-01" -}}
{{- $posts := where .Site.RegularPages "Section" "posts" -}}
{{- $logs := where (where (where .Site.RegularPages "Section" "log") ".Date" "ge" $cutoff) ".Content" "ne" "" -}}
{{- $pages := sort (union $posts $logs) ".Date" "desc" -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Site.Params.description | default .Site.Title }}</description>
    <generator>Hugo</generator>
    <language>{{ .Site.LanguageCode }}</language>
    <lastBuildDate>{{ (index $pages 0).Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    <atom:link href="{{ .Permalink }}index.xml" rel="self" type="application/rss+xml" />
    {{- range $pages }}
    {{- $link := .Permalink -}}
    {{- $isLog := eq .Section "log" -}}
    {{- if $isLog -}}
      {{- $link = printf "%slog/#%s" $.Site.BaseURL .File.ContentBaseName -}}
    {{- end }}
    <item>
      <title>{{ .Title }}{{ with .Params.rating }} ({{ . }}/10){{ end }}</title>
      <link>{{ $link }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <guid isPermaLink="true">{{ $link }}</guid>
      <description>{{ printf "<![CDATA[" | safeHTML }}{{- if .Params.cover -}}
          {{- $img := .Resources.GetMatch .Params.cover -}}
          {{- if $img -}}
            {{- $resized := $img.Fit "768x768 webp q80" -}}
            <img src="{{ $resized.Permalink }}" width="{{ $resized.Width }}" height="{{ $resized.Height }}" alt="{{ .Title }} cover image" />
          {{- end -}}
        {{- end -}}
        <p>{{ .Summary | plainify | htmlUnescape }}{{- $contentWords := countwords .Content -}}
        {{- $summaryWords := countwords .Summary -}}
        {{- $remainingWords := sub $contentWords $summaryWords -}}
        {{- if gt $remainingWords 0 }} ({{ $remainingWords }} more words){{- end -}}</p>{{ printf "]]>" | safeHTML }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
