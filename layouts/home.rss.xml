{{- $cutoff := time "2026-01-01" -}}
{{- $posts := where .Site.RegularPages "Section" "posts" -}}
{{- $logs := where (where (where .Site.RegularPages "Section" "log") ".Date" "ge" $cutoff) ".RawContent" "ne" "" -}}
{{- $pages := sort (union $posts $logs) ".Date" "desc" -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Site.Params.description | default .Site.Title }}</description>
    <generator>Hugo</generator>
    <language>{{ .Site.LanguageCode }}</language>
    <lastBuildDate>{{ (index $pages 0).Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    <atom:link href="{{ .Permalink }}index.xml" rel="self" type="application/rss+xml" />
    {{- range $pages }}
    {{- $link := .Permalink -}}
    {{- $isLog := eq .Section "log" -}}
    {{- if $isLog -}}
      {{- $link = printf "%slog/#%s" $.Site.BaseURL .File.ContentBaseName -}}
    {{- end }}
    <item>
      <title>{{ .Title }}{{ with .Params.rating }} ({{ . }}/10){{ end }}</title>
      <link>{{ $link }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <guid>{{ $link }}</guid>
      <description>{{ .Summary | html }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
